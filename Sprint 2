#include <stdio.h>
#include <stdlib.h>
#include "calculations1.h"

int additionPractice() {
    int num1 = rand() % 100 + 1;
    int num2 = rand() % 100 + 1;
    int solution = num1 + num2;
    int userResponse;

    printf("Please add these numbers:\n%d + %d = ", num1, num2);
    scanf("%d", &userResponse);

    if (userResponse == solution) {
        printf("Correct\n");
        return 1;
    }
    printf("Incorrect\n");
    return 0;
}

int subtractionPractice() {
    int num1 = rand() % 100 + 1;
    int num2 = rand() % 100 + 1;
    int solution = num1 - num2;
    int userResponse;

    printf("Please subtract these numbers:\n%d - %d = ", num1, num2);
    scanf("%d", &userResponse);

    if (userResponse == solution) {
        printf("Correct\n");
        return 1;
    }
    printf("Incorrect\n");
    return 0;
}
